# ===========================================
# COGNITIVE ORACLE TRADING PLATFORM - BACKEND
# Environment Configuration
# ===========================================

# Database (Required)
MONGO_URL="mongodb://localhost:27017"
DB_NAME="oracle_trading"

# CORS Origins (comma-separated for production)
CORS_ORIGINS="http://localhost:3000,https://yourdomain.com"

# ===========================================
# LLM & AI SERVICES
# ===========================================

# Emergent LLM Key (for AI features like TTS)
EMERGENT_LLM_KEY=your_emergent_llm_key_here

# ===========================================
# EXCHANGE API KEYS
# ===========================================

# Binance (https://www.binance.com/en/my/settings/api-management)
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key
BINANCE_TESTNET=true

# Coinbase (https://www.coinbase.com/settings/api)
COINBASE_API_KEY=your_coinbase_api_key
COINBASE_SECRET_KEY=your_coinbase_secret_key
COINBASE_PASSPHRASE=your_coinbase_passphrase
COINBASE_TESTNET=true

# Kraken (https://www.kraken.com/u/settings/api)
KRAKEN_API_KEY=your_kraken_api_key
KRAKEN_PRIVATE_KEY=your_kraken_private_key
KRAKEN_TESTNET=true

# ===========================================
# NEWS & DATA PROVIDERS
# ===========================================

# Benzinga (https://www.benzinga.com/apis/)
BENZINGA_API_KEY=your_benzinga_api_key

# CoinGecko (optional - for higher rate limits)
# https://www.coingecko.com/en/api/pricing
COINGECKO_API_KEY=

# ===========================================
# SOCIAL MEDIA INTEGRATIONS
# ===========================================

# Twitter/X API (https://developer.twitter.com/)
# Get keys from: https://developer.twitter.com/en/portal/projects-and-apps
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret

# Reddit API (https://www.reddit.com/prefs/apps)
# Create an app at: https://www.reddit.com/prefs/apps
# Select "script" type for server-side usage
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=OracleTrading/1.0

# ===========================================
# OPTIONAL SERVICES
# ===========================================

# Telegram Bot (for alerts)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Discord Webhook (for alerts)
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# ===========================================
# APPLICATION SETTINGS
# ===========================================

# Environment (development/staging/production)
ENVIRONMENT=production

# Log Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
